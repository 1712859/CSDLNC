<div class="using-border py-3">
            <div class="inner_breadcrumb  ml-4">
               <ul class="short_ls">
                  <li>
                     <a href="index.html">Home</a>
                     <span>/ /</span>
                  </li>
                  <li>Checkout</li>
               </ul>
            </div>
         </div>

<div class="container">
  <h2>Checkout</h2>
  <h4>Your shopping cart contains: <span>3 Products</span></h4>         
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Mã Sản Phẩm</th>
        <th>Tên sản phẩm</th>
        <th>Số lượng</th>
        <th>Giá</th>
      </tr>
    </thead>
    <tbody>
       {{#each cart}}
      <tr>
        <td>{{MaSP}}</td>
        <td>{{TenSP}}</td>
        <td>{{SoLuong}}</td>
        <td>{{Gia}} VND</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class="checkout-left">
   <div class="col-md-4 checkout-left-basket">
      <h4>Product</h4>
      
      <ul>
      {{#each cart}}
         <li>{{TenSP}} <i>-</i> <span>{{Gia}} VND </span></li>
      {{/each}}
      {{#each Tien}}
         <li>Total <i>-</i> <span>{{TongTien}}</span></li>
      {{/each}}
      </ul>
   </div>
   <div class="col-md-8 address_form">
      <div class="checkout-right-basket">
         <a href="/payment" style="color:blue"> Make a Payment </a>
      </div>
   </div>
   <div class="clearfix"> </div>
   <div class="clearfix"></div>
</div>

</body>
</html>
      